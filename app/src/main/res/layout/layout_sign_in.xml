<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutSignIn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Toolbar
        android:id="@+id/loginToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/title_login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="@dimen/normal_100">

        <com.theberdakh.xmlapp.screens.common.widgets.DebounceMaterialButton
            android:id="@+id/signInButtonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_button_login" />

        <com.theberdakh.xmlapp.screens.common.widgets.DebounceMaterialButton
            android:id="@+id/signInButtonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_button_register" />

    </LinearLayout>


</LinearLayout>
