<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_100"
    android:elevation="2dp"
    android:background="@drawable/shape_card_24"
    android:orientation="horizontal"
    android:padding="@dimen/small_100"
    android:weightSum="5">


    <ImageView
        android:id="@+id/food_image"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1.5"
        android:scaleType="fitCenter"
        android:src="@drawable/pizza_margarita"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/food_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/small_100"
            android:fontFamily="@font/dm_sans_medium"
            android:textAlignment="textStart"
            android:textColor="#222222"
            android:textSize="20sp"
            tools:text="Margarita" />

        <TextView
            android:id="@+id/food_price"
            android:paddingHorizontal="@dimen/small_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans_medium"
            android:textAlignment="textStart"
            android:textColor="@color/green_gradient_light"
            android:textSize="20sp"
            tools:text="40.000" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/food_increase"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="@dimen/small_100"
            android:background="@drawable/bg_rounded_top">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/green_gradient_light"
                android:background="@drawable/ic_back"/>

        </FrameLayout>

        <TextView
            android:id="@+id/food_quantity"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:background="#EDF2F6"
            android:textAlignment="center"
            android:paddingVertical="@dimen/small_50"
            android:fontFamily="@font/dm_sans_medium"
            android:textColor="@color/green_gradient_light"
            android:text="12" />

        <FrameLayout
            android:id="@+id/food_decrease"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="@dimen/small_100"
            android:background="@drawable/bg_rounded_bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/green_gradient_light"
                android:background="@drawable/ic_back"/>

        </FrameLayout>


    </LinearLayout>


</LinearLayout>
